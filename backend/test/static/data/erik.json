{
    "$jsonSchema": {
        "bsonType": "object",
        "required": ["name", "email"],
        "properties": {
            "name": {
                "bsonType": "string",
                "description": "the first name of a user must be determined"
            }, 
            "email": {
                "bsonType": "string",
                "description": "the email address of a user must be determined"
            },
            "tasks": {
                "bsonType": "array",
                "uniqueItems": true,
                "items": {
                    "bsonType": "objectId"
                }
            }
        }
    }
}